{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "lib": ["es2015", "es2016", "es2017.object", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "noUnusedLocals": true,
    "rootDir": "./src",
    "baseUrl": "./",
    "typeRoots": [
      "node_modules/@types",
      "./types"
    ],
    "paths": {
      "~app/*": ["src/app/*"],
      "~elements": ["src/elements/index.ts"],
      "~elements/*": ["src/elements/*"],
      "~etc": ["src/etc/index.ts"],
      "~etc/*": ["src/etc/*"],
      "~opt/*": ["src/opt/*"],
      "~util": ["src/util/index.ts"],
      "~util/*": ["src/util/*"],
      "~data": ["src/util/index.ts"],
      "~data/*": ["src/util/*"],
      "~/*": ["src/*"],
    }
  }
}
